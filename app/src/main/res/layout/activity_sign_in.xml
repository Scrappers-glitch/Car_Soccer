<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_vertical"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/soccertex"
    android:backgroundTint="@color/orange_yellow_crayola"
    android:backgroundTintMode="multiply"
    tools:context=".GameMenus.SignIn.SignIn"
    android:paddingStart="180dp"
    android:paddingEnd="180dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/the_linear"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="1000dp"
        android:layout_marginVertical="36dp">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@mipmap/soccer"
        android:scaleType="center"
        android:rotation="270"
        android:layout_margin="0dp"
        />
    </androidx.cardview.widget.CardView>
    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/text_container"
        android:paddingVertical="4dp"
        android:paddingHorizontal="12dp"
        android:textCursorDrawable="@color/white_d"
        android:hint="UserName"
        android:textColorHint="@color/black_b"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/userPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:paddingVertical="4dp"
        android:paddingHorizontal="12dp"
        android:textCursorDrawable="@color/white_d"
        android:background="@drawable/text_container"
        android:layout_marginTop="5dp"
        android:hint="Password"
        android:textColorHint="@color/black_b"
        android:inputType="textPassword"
        />
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/rememberMeCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:textColor="@color/pureWhite"
        android:backgroundTint="@color/pureWhite"
        android:buttonTint="@color/pureWhite"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="5dp"
        />
</LinearLayout>
    <TextView
        android:id="@+id/signIn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/crystal_buttons"
        android:paddingHorizontal="0dp"
        android:text="Start"
        android:fontFamily="cursive"
        android:textSize="24sp"
        android:textStyle="italic|bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        />
</RelativeLayout>